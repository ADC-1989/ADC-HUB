local Library = loadstring(game:HttpGet('https://raw.githubusercontent.com/Rain-Design/Libraries/main/Shaman/Library.lua'))()
local Flags = Library.Flags

local Window = Library:Window({
    Text = "Speed Simulator"
})

local Tab = Window:Tab({
    Text = "Main"
})


local Section = Tab:Section({
    Text = "Autofarm"
})


local Section2 = Tab:Section({
    Text = "Credits"
})


Section:Toggle({
    Text = "Enabled",
    Callback = function(bool)
        print(bool)
        _G.yes = bool
        while _G.yes == true do
            wait(_G.waittime)
local A_1 = _G.walkspeed
local A_2 = 2
local Event = game:GetService("ReplicatedStorage").GlobalFunctions.AddPlayerSpeed
Event:FireServer(A_1, A_2)

        end
    end
})

local label = Section2:Label({
    Text = "Made by ADC#1989.",
    Color = Color3.fromRGB(217, 97, 99),
    Tooltip = "Made by ADC#1989."
})


Section:Slider({
    Text = "Speed amount",
    Default = 5,
    Minimum = 1,
    Maximum = 1000,
    Flag = "SliderFlag",
    Callback = function(v)
        _G.walkspeed = v
    end
})

Section:Input({
    Placeholder = "Wait time",
    Flag = "URL",
    Callback = function(v)
        _G.walkspeed = v
    end
})

Tab:Select()
